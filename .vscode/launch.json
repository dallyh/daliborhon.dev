{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Development server",
            "command": "pnpm dev",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "Chrome against localhost",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4321",
            "webRoot": "${workspaceFolder}/src",
            "skipFiles": ["**/node_modules/**"]
        }
    ]
}
