---
import { getRelativeLocaleUrl } from "astro:i18n";
import type { Post } from "@services/sanity/queries/posts";
import type { Tag } from "@services/sanity/queries/tags";

interface Props {
	post?: Post;
	tags?: Tag[];
	bgColor: string;
	justify: string;
	padding?: string;
}

const { post, bgColor, justify, tags, padding = "0.5rem" } = Astro.props;

const locale = Astro.currentLocale!;
---

<ul class="tag-list">
	{
		tags &&
			tags.map((tag) => (
				<li>
					<a href={getRelativeLocaleUrl(locale, `/blog/tags/${tag.slug}/`)}>#{tag.title.toLowerCase()}</a>
				</li>
			))
	}
	{
		post &&
			post.tags.map(async (tag) => {
				return (
					<li>
						<a href={getRelativeLocaleUrl(locale, `/blog/tags/${tag?.slug}/`)}>#{tag?.title.toLowerCase()}</a>
					</li>
				);
			})
	}
</ul>

<style define:vars={{ bgColor, justify, padding }}>
	.tag-list {
		display: flex;
		gap: 0.3rem;
		flex-wrap: wrap;
		justify-content: var(--justify);
		text-align: center;

		li {
			a {
				display: inline-block;
				background: var(--bgColor);
				border-radius: 6px;
				font-size: 0.8rem;
				padding: var(--padding);
				position: relative;

				&:visited {
					color: var(--a-color);
				}

				&:hover {
					text-decoration: none;
					top: -2px;
				}
			}
		}
	}
</style>
