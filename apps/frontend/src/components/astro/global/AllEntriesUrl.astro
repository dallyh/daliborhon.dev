---
import { getRelativeLocaleUrl } from "astro:i18n";
import { Icon } from "astro-icon/components";

interface Props {
	url: string;
	urlDescription: string;
}

const { url, urlDescription } = Astro.props;

const locale = Astro.currentLocale!;
---

<div class="arrow-link">
	<a href={getRelativeLocaleUrl(locale, url)} aria-label={urlDescription} title={urlDescription}>
		{urlDescription}
		<i>
			<Icon name="bi:arrow-right" />
		</i>
	</a>
</div>

<style>
	.arrow-link {
		font-size: 1.1rem;
		text-align: center;

		a {
			display: inline-flex;
			gap: 0.5rem;
		}

		svg {
			margin-top: 0.15rem;
			width: 1rem;
			height: 1rem;
			color: var(--body-color);
		}
	}
</style>
