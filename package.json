{
    "name": "daliborhon.dev",
    "version": "7.0.0",
    "private": true,
    "scripts": {
        "build": "turbo build --color",
        "build:packages": "pnpm build --filter @daliborhon.dev/integrations",
        "format": "pnpm run format:code && pnpm run format:imports",
        "format:code": "prettier -w \"**/*\" --ignore-unknown --cache",
        "format:imports": "biome check --formatter-enabled=false --linter-enabled=false --write",
        "lint": "biome lint --diagnostic-level=warn",
        "lint:fix": "biome lint --write",
        "lint:fix:unsafe": "biome lint --write --unsafe",
        "web:deploy": "pnpm deploy --filter \"@daliborhon.dev/web\" ./deploy"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "prettier": "^3.4.2",
        "prettier-plugin-astro": "^0.14.1",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "turbo": "^2.4.0",
        "typescript": "^5.7.3",
        "@types/node": "^22.13.1"
    },
    "packageManager": "pnpm@10.4.0+sha512.6b849d0787d97f8f4e1f03a9b8ff8f038e79e153d6f11ae539ae7c435ff9e796df6a862c991502695c7f9e8fac8aeafc1ac5a8dab47e36148d183832d886dd52",
    "engines": {
        "node": ">=22.0.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@biomejs/biome",
            "esbuild",
            "sharp"
        ]
    }
}
