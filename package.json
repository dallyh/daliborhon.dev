{
    "name": "daliborhon.dev",
    "version": "6.0.0",
    "private": true,
    "scripts": {
        "build": "turbo build --env-mode=loose",
        "format": "pnpm run format:code && pnpm run format:imports",
        "format:code": "prettier -w \"**/*\" --ignore-unknown --cache",
        "format:imports": "biome check --formatter-enabled=false --linter-enabled=false --write",
        "lint": "biome lint --diagnostic-level=warn",
        "lint:all": "biome lint --diagnostic-level=warn",
        "lint:fix": "biome lint --write",
        "lint:fix:unsafe": "biome lint --write --unsafe"
    },
    "devDependencies": {
        "@biomejs/biome": "1.9.4",
        "prettier": "^3.4.2",
        "prettier-plugin-astro": "^0.14.1",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "turbo": "^2.4.0",
        "typescript": "^5.7.3"
    },
    "packageManager": "pnpm@10.0.0+sha512.b8fef5494bd3fe4cbd4edabd0745df2ee5be3e4b0b8b08fa643aa3e4c6702ccc0f00d68fa8a8c9858a735a0032485a44990ed2810526c875e416f001b17df12b",
    "engines": {
        "node": ">=22.0.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "@biomejs/biome",
            "esbuild",
            "sharp"
        ]
    }
}
