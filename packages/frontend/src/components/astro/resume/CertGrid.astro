---
import type { CertCard } from "./CertCard.astro";

export interface Props {
    children: CertCard | CertCard[];
}
---

<div class="prose-p:m-0 prose-ul:m-0 prose-ul:p-0">
    <ul class="certifications-grid prose-img:m-0">
        <slot />
    </ul>
</div>

<style>
    .certifications-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
    }

    @media (max-width: 768px) {
        .certifications-grid {
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 1rem;
        }
    }
</style>
