{
    "extends": "astro/tsconfigs/strict",
    "include": ["./"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "bundler",
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@components/*": ["src/components/*"],
            "@assets/*": ["src/assets/*"],
            "@i18n/*": ["src/i18n/*"],
            "@public/*": ["src/public/*"],
            "@layouts/*": ["src/layouts/*"],
            "@utils": ["src/utils/index.ts"],
            "@utils/og": ["src/utils/open-graph/index.ts"],
            "@services/*": ["src/services/*"],
            "@config": ["site.config.ts"],
            "@content/*": ["src/content/*"],
            "$messages": ["src/paraglide/messages.js"],
            "$paraglide-runtime": ["src/paraglide/runtime.js"],
            "$sanity-schema": ["../studio/src/index.d.ts"]
        }
    }
}
