{
    "include": ["${configDir}/src/**/*"],
    "exclude": ["${configDir}/dist/**/*", "${configDir}/src/astro-i18n/messages/*", "${configDir}/watch-files.ts"],
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}
