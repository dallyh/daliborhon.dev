---
import * as m from "$messages";
import FormattedDate from "@components/astro/blog/FormattedDate.astro";
import type { IGenBlogArticleMetaFragment } from "@services/graphql/__generated/sdk";
import { Image } from "@unpic/astro";
import { getAbsoluteCategoryUrl, getBlogPostUrl } from "@utils";
import TagList from "./TagList.astro";

interface Props {
    post: IGenBlogArticleMetaFragment;
}

const { post } = Astro.props;
const locale = Astro.currentLocale!;
const postUrl = getBlogPostUrl(locale, post);
---

<article class="post-preview">
    <div class="post-image">
        <Image src={post?.previewImage?.src!} alt={post!.title!} width={1200} height={630} loading="eager" placeholder="blurhash" />
    </div>
    <hr />
    <div class="post-description">
        <a href={postUrl} class="post-title">{post?.title}</a>
        <div class="post-meta">
            {
                post.category?.name && (
                    <p>
                        {m.blog__category()}: <a href={getAbsoluteCategoryUrl(locale, post.category)}>{post.category?.name}</a>
                    </p>
                )
            }
            <div>
                <FormattedDate pubDateTime={post._meta?.firstPublishedAt!} modDatetime={post._meta?.publishedAt!} locale={locale} />
            </div>
        </div>
    </div>
    <div class="tags">
        <TagList post={post} bgColor="transparent" justify="center" />
    </div>
</article>

<style>
    .post-preview {
        display: flex;
        flex-direction: column;
        align-items: center;
        background: rgba(var(--secondary), 1);
        border-radius: 6px;
        box-shadow: var(--global-box-shadow);
        width: 100%;
        height: 100%;
        text-align: center;
        overflow: hidden;
        color: var(--body-color);
        border: var(--border);
        position: relative;

        .tags {
            display: flex;
            justify-content: center;
            padding: 0.2rem;
            margin-top: auto;
        }

        .post-description {
            padding: 0.5rem;
            font-size: 0.825rem;
            display: flex;
            flex-direction: column;

            > a {
                margin-top: 0.3rem;
                margin-bottom: 0.3rem;
                font-size: 1.2rem;
            }
        }

        .post-meta {
            line-height: 1.5;
            p {
                font-size: inherit;
                line-height: inherit;

                a {
                    font-size: inherit;
                }
            }
        }

        .post-image {
            display: block;
            width: 100%;
            height: auto;
            object-fit: cover;
        }
    }
</style>
