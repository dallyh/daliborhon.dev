---
// Thanks! https://github.com/markteekman/accessible-astro-components/blob/main/Breadcrumbs.astro
import { type BreadCrumbsItem } from "./BreadCrumbsItem.astro";

interface Props {
	children: BreadCrumbsItem | BreadCrumbsItem[];
}
---

<div class="breadcrumbs-section section">
	<nav class="breadcrumb" aria-label="breadcrumbs">
		<ul>
			<slot />
		</ul>
	</nav>
</div>

<style>
	.breadcrumbs-section {
		padding-top: 1rem;
		padding-bottom: 0rem;
		margin-bottom: -1rem;
	}
</style>
