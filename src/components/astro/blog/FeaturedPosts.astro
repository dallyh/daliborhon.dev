---
import { BLOG } from "@config/blog";
import { loadNamespaces, t } from "@i18n/i18n";
import { getLocale } from "@i18n/utils";
import Section from "../global/Section.astro";
import PostsGrid from "./PostsGrid.astro";
import { getFeaturedBlogArticlesByLocale } from "@services/content/getFeaturedBlogArticlesByLocale";

interface Props {
    postSize?: number;
    isFirstSection?: boolean;
    showSeeAllUrl?: boolean;
}

const { postSize = BLOG.featuredPostsSize, isFirstSection = false, showSeeAllUrl = true } = Astro.props;

// i18next
const locale = getLocale(Astro.url);
await loadNamespaces(locale, ["blog"]);

//Blogs
const posts = await getFeaturedBlogArticlesByLocale({locale, first: postSize});

const sectionProps = {
    id: "featuredPosts",
    isFirstSection,
    sectionTitle: t("blog.featured_posts_title"),
    sectionDescription: t("blog.featured_posts_description"),
};
---

<Section {...sectionProps}>
    {!posts && <p>{t("blog.no_featured_posts")} ðŸ˜ž</p>}
    {posts && posts.length === 0 && <p>{t("blog.no_featured_posts")} ðŸ˜ž</p>}
    {
        posts && posts.length  !== 0 && (
            <>
                {showSeeAllUrl && <PostsGrid posts={posts} url="/blog/posts/featured" urlDescription={t("blog.see_all_featured")} />}
                {!showSeeAllUrl && <PostsGrid posts={posts} />}
            </>
        )
    }
</Section>