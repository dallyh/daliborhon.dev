---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "@components/astro/blog/FormattedDate.astro";
import { getLocale } from "@i18n/utils";
import { getOgImageUrl } from "@utils/getOgImageUrl";
import { getBlogPostUrl } from "@utils/getBlogPostUrl";
import { getPostImgTransitionName } from "@utils/getPostImgTransitionName";
import { getRelativeLocaleUrl } from "astro:i18n";
import { getCategoryTitleByLocale } from "@utils/getCategoryByLocale";

interface Props {
    post: CollectionEntry<"posts">;
    transitionId?: string;
}

const { post } = Astro.props;
const locale = getLocale(Astro.url);
const ogUrl = getOgImageUrl(locale, post, Astro.url);
const postUrl = getBlogPostUrl(locale, post);
const transitionName = getPostImgTransitionName(post);
---

<div class="post-preview">
    <img src={ogUrl} alt={post.data.title} transition:name={transitionName} />
    <div class="post-description">
        <a href={postUrl} class="post-title">{post.data.title}</a>
        {
            post.data.category && (
                <p>
                    Posted in: <a href={getRelativeLocaleUrl(locale, `/blog/categories/${post.data.category.id}`)}>{getCategoryTitleByLocale(locale, post.data.category.id)}</a>
                </p>
            )
        }
        <FormattedDate pubDateTime={post.data.pubDateTime} modDatetime={post.data.modDatetime} locale={locale} />
    </div>
</div>

<style>
    .post-preview {
        display: flex;
        flex-direction: row;
        background: rgba(var(--secondary), 1);
        border-radius: 6px;
        box-shadow: var(--global-box-shadow);
        width: 100%;
        height: 100%;
        overflow: hidden;

        @media (max-width: 468px) {
            flex-direction: column;
        }

        .tags {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0.2rem;
        }

        .post-description {
            display: flex;
            flex-direction: column;
            justify-content: center;
            font-size: 0.825rem;
            line-height: 2;
            margin-left: 1rem;

            p {
                font-size: inherit;

                a {
                    font-size: inherit;
                }
            }
        }

        img {
            display: block;
            max-height: 100px;
            width: auto;
            object-fit: cover;

            @media (max-width: 468px) {
                max-height: 200px;
                width: 100%;
            }
        }

        a {
            font-size: 1.2rem;
            line-height: 2;
        }
    }
</style>
