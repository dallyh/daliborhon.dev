---
import FormattedDate from "@components/astro/blog/FormattedDate.astro";
import { loadNamespaces, t } from "@i18n/i18n";
import { getLocale } from "@i18n/utils";
import type { IGenBlogArticleMetaFragment } from "@services/graphql/__generated/sdk";
import { Image } from "@unpic/astro";
import { getAbsoluteCategoryUrl, getBlogPostUrl, getOgImageUrl } from "@utils";

interface Props {
    post: IGenBlogArticleMetaFragment;
    transitionId?: string;
}

const { post } = Astro.props;
const locale = getLocale(Astro.url);
const postUrl = getBlogPostUrl(locale, post);

await loadNamespaces(locale, ["blog"]);
---

<article class="post-preview">
    <Image src={post?.previewImage?.src!} alt={post.title} />
    <div class="post-description">
        <a href={postUrl} class="post-title">{post.title}</a>
        {
            post.category && (
                <p>
                    {t("blog.posted_category")}: <a href={getAbsoluteCategoryUrl(locale, post?.category)}>{post.category.name}</a>
                </p>
            )
        }
        <div>
            <FormattedDate pubDateTime={post._meta?.firstPublishedAt!} modDatetime={post?._meta?.publishedAt!} locale={locale} />
        </div>
    </div>
</article>

<style>
    .post-preview {
        display: flex;
        flex-direction: row;
        background: rgba(var(--secondary), 1);
        border-radius: 6px;
        box-shadow: var(--global-box-shadow);
        width: 100%;
        height: 100%;
        overflow: hidden;
        color: var(--body-color);
        border: var(--border);
        position: relative;

        @media (max-width: 468px) {
            flex-direction: column;
        }

        .tags {
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 0.2rem;
        }

        .post-description {
            display: flex;
            flex-direction: column;
            justify-content: center;
            font-size: 0.825rem;
            line-height: 2;
            margin-left: 1rem;

            p {
                font-size: inherit;

                a {
                    font-size: inherit;
                }
            }
        }

        img {
            display: block;
            max-height: 100px;
            width: auto !important;
            object-fit: cover;

            @media (max-width: 468px) {
                max-height: 200px;
                width: 100%;
            }
        }

        a {
            font-size: 1.2rem;
            line-height: 2;
        }
    }
</style>
