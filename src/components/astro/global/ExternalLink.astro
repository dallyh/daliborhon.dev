---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const { class: restClass = "", ...rest } = Astro.props;

const mergedClass = ["block", restClass].filter(Boolean).join(" ");
---

<a {...rest} class={mergedClass} rel="nofollow noopener noreferrer" target="_blank">
	<slot />
	<span class="external-link-icon"><i></i></span>
</a>
