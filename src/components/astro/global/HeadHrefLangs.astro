---
import { getRelativePathList } from "@i18n/utils";

const site = import.meta.env.SITE;
const base = import.meta.env.BASE_URL;
const paths = await getRelativePathList(Astro.url);
---

<Fragment>
    <link rel="alternate" hreflang="x-default" href={site + base} />
    {
      paths.map((path) => (
          <link rel="alternate" hreflang={path.locale} href={site + path.relativeUrl}/>
        ))
    }
</Fragment>
