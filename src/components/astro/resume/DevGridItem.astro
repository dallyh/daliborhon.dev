---
import { Icon } from "astro-icon/components";

export type DevGridItem = {
	label: string;
	iconName: string;
};

export interface Props {
	label: string;
	iconName: string;
}

const { label, iconName } = Astro.props;
const isPrint = Astro.locals.isPrint;
---

{isPrint && <li>{label}</li>}

{
	!isPrint && (
		<li>
			<span class="sr-only">{label}</span>
			<div class="tooltip" data-tip={label}>
				<Icon name={`devicon:${iconName}`} size={52} aria-label={label} title={label} />
			</div>
		</li>
	)
}
