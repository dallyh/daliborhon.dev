---
import type { DevListItem } from "./DevListItem.astro";

export interface Props {
    children: DevListItem | DevListItem[];
}
---

<ul class="dev-list-inline p-0 m-0 prose-li:list-none prose-li:m-0 prose-li:p-0">
    <slot />
</ul>

<style>
    .dev-list-inline {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
        gap: 1rem;
        width: 100%;
    }
</style>
