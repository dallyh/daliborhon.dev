---
export type TimelineItem = {
    date: string;
    title: string;
    institute: string;
};

export interface Props {
    date: string;
    title: string;
    institute: string;
}

const { date, title, institute } = Astro.props;
---

<div class="timeline-item">
    <p class="date">{date}</p>
    <p class="title">{title}</p>
    <p>{institute}</p>
    <div class="description">
        <slot class="desc" />
    </div>
</div>

<style>
    .timeline-item {
        position: relative;
        margin-left: 1.5rem;
        margin-bottom: 2rem;

        .date {
            font-size: 0.835rem;
            font-weight: 300;
            position: relative;
            margin-bottom: 0.5rem;

            &::before {
                content: "";
                position: absolute;
                width: 15px;
                height: 15px;
                border-radius: 50%;
                left: -30px;
                top: 0;
                border: 3px solid rgba(var(--accent), 1);
                background-color: rgba(var(--secondary), 1);
            }
        }

        .title {
            line-height: 1.5;
            margin-top: 0.2rem;
            position: relative;
            font-weight: normal;
            max-width: 95%;
            font-size: 1.2rem;
            color: rgba(var(--accent), 1);
        }

        .description {
            font-size: 0.9rem;
            font-weight: 400;
            margin-top: 1rem;
            background-color: rgba(var(--secondary), 1);
            padding: 0.725rem;
            box-shadow: var(--global-box-shadow);
            border-radius: 6px;
            border: var(--border);
        }
    }
</style>
