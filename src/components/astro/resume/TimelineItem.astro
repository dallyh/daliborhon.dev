---
export type TimelineItem = {
    date: string;
    title: string;
    institute: string;
};

export interface Props {
    date: string;
    title: string;
    institute: string;
}

const { date, title, institute } = Astro.props;
const isPrint = Astro.locals.isPrint;
---

<div class="timeline-item">
    <p class="date">{date}</p>
    <p class="title"><strong>{title}</strong></p>
    <p><i>{institute}</i></p>
    <div class="box is-size-7">
        <slot />
    </div>
    {isPrint && <hr />}
    
</div>

<style>
    .timeline-item {
        position: relative;
        margin-left: 1.5rem;
        margin-bottom: 2rem;

        .date {
            font-size: 0.835rem;
            font-weight: 300;
            position: relative;
            margin-bottom: 0.5rem;

            &::before {
                content: "";
                position: absolute;
                width: 15px;
                height: 15px;
                border-radius: 50%;
                left: -30px;
                top: 0;
                border: 3px solid var(--bulma-primary);
                background-color: var(--bulma-primary);
            }
        }

        .title {
            line-height: 1.5;
            margin-top: 0.2rem;
            position: relative;
            font-weight: normal;
            max-width: 95%;
            font-size: 1.2rem;
            color: var(--bulma-primary);
        }
    }
</style>
