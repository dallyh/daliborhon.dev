---
import { ViewTransitions } from "astro:transitions";
import HeadHrefLangs from "@components/astro/global/HeadHrefLangs.astro";
import BrowserWarning from "@components/astro/global/BrowserWarning.astro";
import { getLocale } from "astro-i18n-aut";
import ContactModal from "@components/astro/global/ContactModal.astro";
import ogImage from "@assets/img/og/og-image.webp";
import Navigation from "@components/astro/global/Navigation.astro";
import Footer from "@components/astro/global/Footer.astro";

// Global CSS
import "../styles/reset.css";
import "../styles/global.css";
import "../styles/keyframes.css";


interface Props {
    title: string;
    description?: string;
    isRootPage?: boolean;
    showFooterContact?: boolean;
}

const { title, isRootPage = false, showFooterContact = true } = Astro.props;
const { description = "Dalibor's webpage" } = Astro.props;
const basePath = import.meta.env.BASE_URL;
const locale = getLocale(Astro.url);
---

<!doctype html>
<html lang={locale}>
    <head>
        <ViewTransitions fallback="swap" />
        <HeadHrefLangs />
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <title>{title}</title>
        <meta name="og:image" content={ogImage.src} />
        <meta name="og:image:width" content="1024" />
        <meta name="og:image:height" content="1024" />
        <meta name="og:type" content="website" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/x-icon" href={`${basePath}favicon.ico`} />
        <link rel="icon" type="image/svg+xml" href={`${basePath}favicon.svg`} />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Major+Mono+Display&family=Quicksand:wght@300;400;500;600;700&display=swap" rel="stylesheet prefetch" />
        <link rel="stylesheet prefetch" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css" />
        <link rel="stylesheet prefetch" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    </head>
    <body>
        {isRootPage && 
            (
                <slot />
            )
        }
        {!isRootPage && 
            (
                <BrowserWarning />
                <ContactModal />
                <Navigation title={title} />
                <div class="page-content">
                    <slot />
                </div>
                <Footer showContact={showFooterContact} />
            )
        }
        <script>
            import DropdownHandler from "../scripts/dropdown";
            import { initializeTooltips } from "../scripts/tooltips";

            document.addEventListener(
                "astro:page-load",
                (e) => {
                    DropdownHandler.init();
                    initializeTooltips();
                },
                { once: false },
            );
        </script>
    </body>
</html>
