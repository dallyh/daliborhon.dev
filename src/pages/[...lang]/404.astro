---
import { getRelativeLocaleUrl } from "astro:i18n";
import * as m from "$messages";
import { setLocale } from "$paraglide-runtime";
import { type AllowedLocales, defaultLocale } from "@i18n-config";
import MainLayout from "@layouts/MainLayout.astro";
import { siteConfig } from "@site-config";
import { Icon } from "astro-icon/components";

export const prerender = false;
let locale = Astro.currentLocale ?? defaultLocale;

const layoutProps = {
	title: m.error__not_found(),
	description: m.error__not_found_description(),
};

const configCookie = siteConfig.i18n.localeCookie;
const localeCookie = Astro.cookies.get(configCookie.name);
if (localeCookie) {
	locale = localeCookie.value;
}
setLocale(locale as AllowedLocales);
---

<MainLayout {...layoutProps}>
	<meta name="robots" content="noindex, nofollow" slot="head" />
	<div class="notfound-container">
		<div class="notfound">
			<div class="notfound-404">
				<Icon name="document-404" />
			</div>
			<h1>404</h1>
			<h2>{m.error__not_found_description()}</h2>
			<p>{m.error__not_found_detail()}</p>
			<div class="buttons">
				<button id="backButton" onclick="history.back()"><Icon name="bi:arrow-left" />{m.common__back_btn()}</button>
				<a href={getRelativeLocaleUrl(locale, "/")}><Icon name="bi:house" />{m.common__home()}</a>
			</div>
		</div>
	</div>
</MainLayout>

<style is:global>
	main {
		margin: auto;
	}

	body {
		margin: 0;
		padding: 0;
	}
</style>

<style>
	.notfound-container {
		top: 0;
		left: 0;
		position: fixed;
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
		width: 100vw;
	}

	.notfound {
		position: relative;
		max-width: 560px;
		line-height: 1.1;
		display: flex;
		flex-direction: column;
		gap: 1rem;

		h1 {
			font-size: 65px;
			font-weight: 600;
			margin: 0;
			text-transform: uppercase;
		}

		h2 {
			font-size: 21px;
			font-weight: 600;
			margin: 0;
			text-transform: uppercase;
		}

		p {
			font-weight: 400;
			margin: 0;
		}
	}

	.notfound-404 {
		position: absolute;
		left: -140px;
		top: 0;
		display: inline-block;
		width: 140px;
		height: 140px;

		svg {
			width: 100%;
			height: 100%;
			color: var(--bulma-primary);
		}

		&:before {
			content: "";
			position: absolute;
			width: 100%;
			height: 100%;
			transform: scale(1.8);
			border-radius: 50%;
			background-color: rgba(var(--bulma-primary-rgb), 0.1);
			z-index: -1;
		}
	}

	.buttons {
		display: inline-flex;
		gap: 1rem;

		a,
		button {
			display: inline-flex;
			align-items: center;
			gap: 0.5rem;
			font-weight: 700;
			height: 2rem;
		}

		a {
			&:visited {
				color: var(--a-color);
			}
		}

		button {
			width: max-content;
			color: var(--a-color);

			&:hover,
			&:focus-visible {
				text-decoration: underline;
			}
		}
	}

	@media (max-width: 768px) {
		.notfound-404 {
			left: 0;
			width: 110px;
			height: 110px;
		}

		.notfound {
			padding-left: 1rem;
			padding-right: 1rem;
			padding-top: 110px;
		}
	}
</style>
