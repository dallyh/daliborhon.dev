---
import Section from "@components/astro/global/Section.astro";
import { loadNamespaces, t } from "@i18n/i18n";
import { getLocale, getStaticPaths } from "@i18n/utils";
import PageLayout from "@layouts/PageLayout.astro";
import { Icon } from "astro-icon/components";
export { getStaticPaths };

// i18next
const locale = getLocale(Astro.url);
await loadNamespaces(locale, ["contact", "common", "blog", "projects"]);

const layoutProps = {
    title: t("common.home_page"),
    description: t("common.site_description"),
    homepage: true,
};

const postSize = 3;
---

<PageLayout {...layoutProps}>
    <div class="page-not-found">
        <Icon name="tabler:error-404" />
        <span>Well, this is awkward...</span>
        <h1>Page was not found</h1>
        <p>Looks like the developer forgot something important.</p>
    </div>
</PageLayout>

<style is:global>
    main {
        margin: auto;
    }
</style>

<style>
    .page-not-found {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        position: relative;
    }

    [data-icon="tabler:error-404"] {
        width: 8rem;
        height: 8rem;
    }

    .code {
        position: absolute;
        color: red;
        opacity: 0.2;
        font-size: 8rem;
    }
</style>
