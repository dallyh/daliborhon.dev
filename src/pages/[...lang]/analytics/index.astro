---
import PageLayout from "@layouts/PageLayout.astro";
import PageViewsComponent from "@components/react/PageViews/PageViews";
import Section from "@components/astro/global/Section.astro";
import type { AllowedLocales } from "@i18n-config";
import * as m from "$messages";

export { getStaticPaths } from "@i18n/utils";

const locale = Astro.currentLocale as AllowedLocales;
---

<PageLayout title={m.common__page_views()} description={m.common__page_views()}>
	<Section sectionTitle={m.common__page_views()} isFirstSection id="pageViews">
		<PageViewsComponent locale={locale} client:load />
	</Section>
	<footer class="footer">
		<div class="content has-text-centered">
			<p class="subtitle is-size-7">
				{m.analytics__credits()} <a href="https://www.thomasledoux.be/blog/basic-analytics-vercel-postgres-astro">Thomas Ledoux</a>!
			</p>
		</div>
	</footer>
</PageLayout>

<style>
	.footer {
		--bulma-footer-background-color: transparent;
		--bulma-footer-padding: 0.25rem;
	}
</style>
