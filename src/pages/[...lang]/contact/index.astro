---
import { loadNamespaces, t } from "@i18n/i18n";
import { getLocale } from "@i18n/utils";
import Contact from "@components/astro/global/Contact.astro";
import { getStaticPaths } from "@i18n/utils";
import PageLayout from "@layouts/PageLayout.astro";
import Section from "@components/astro/global/Section.astro";

export { getStaticPaths };

// i18next
const locale = getLocale(Astro.url);
await loadNamespaces(locale, ["contact"]);

const layoutProps = {
    title: t("contact.leave_message_title")
};
---

<PageLayout {...layoutProps}>
    <Section sectionTitle={t("contact.leave_message_title")} sectionDescription={t("contact.contact_me_form")} id="contact">
        <Contact />
    </Section>
</PageLayout>
