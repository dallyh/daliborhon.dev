---
import MainLayout from "@layouts/MainLayout.astro";
import { loadNamespaces, t } from "@i18n/i18n";
import { getLocale, getLocaleUrl } from "astro-i18n-aut";
import Intro from "@components/astro/home/Intro.astro";
import Projects from "@components/astro/home/Projects.astro";
import Contact from "@components/astro/home/Contact.astro";
import { getCollection } from "astro:content";
import BlogPost from "@components/astro/blog/BlogPost.astro";

// i18next
const locale = getLocale(Astro.url);
const namespaces = ["contactForm", "shared", "landing"];
await loadNamespaces(locale, namespaces);

//Blogs
const recentPostsSize = 4;
const allPosts = await getCollection("posts");
const filteredPosts = allPosts.filter((post) => post.slug.split("/")[0] === locale).slice(0, recentPostsSize);
---

<MainLayout title="Dalibor Hon" description={t("landing:description")} showFooterContact={false}>
    <main>
        <section class="intro">
            <div class="section-content-container">
                <Intro />
            </div>
        </section>
        <section id="projects">
            <div class="section-content-container">
                <div class="section-header">
                    <h2 class="gradient-text-accent">{t("landing:projects_title")}</h2>
                </div>
                <div class="section-content">
                    <Projects />
                </div>
            </div>
        </section>
        <section id="blog">
            <div class="section-content-container">
                <div class="section-header">
                    <h2 class="gradient-text-accent">{t("landing:blog_title")}</h2>
                </div>
                <div class="section-content">
                    <ul>
                        {
                            filteredPosts.map((post) => (
                                <li>
                                    <BlogPost title={post.data.title} url={getLocaleUrl(`/blog/posts/${post.slug.split("/")[1]}/`, locale)} date={post.data.pubDate} image={post.data.image} />
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </section>
        <section id="contact">
            <div class="section-content-container">
                <div class="section-header">
                    <h2 class="gradient-text-accent">{t("shared:LeaveMeAMessage")}</h2>
                </div>
                <div class="section-description">
                    <p>{t("contactForm:ContactMe")}</p>
                </div>
                <div class="section-content">
                    <Contact />
                </div>
            </div>
        </section>
    </main>
</MainLayout>

<style>
    section {
        display: grid;
        width: 100%;

        @media (max-width: 768px) {
            height: unset;
        }
    }

    .section-content-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        padding-top: 1.5rem;
        padding-bottom: 1.5rem;

        .section-subheader {
            font-size: 1.5rem;
            font-weight: 500;
            position: relative;
            z-index: 1;
            color: rgba(var(--accent), 1);
            padding-top: 1rem;
        }

        .section-description {
            margin-top: 10px;
        }

        .section-content {
            width: 100%;
            height: 100%;
            padding-top: 1.5rem;
            padding-bottom: 1.5rem;
        }
    }

    .section-footer {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        padding-bottom: 0.5rem;
    }
</style>
