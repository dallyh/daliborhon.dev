{
  "exclude": ["./packages", "./node_modules"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "allowJs": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
  }
}
