{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types"],
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "baseUrl": "./",
        "paths": {
            "@components/*": ["src/components/*"],
            "@assets/*": ["src/assets/*"],
            "@i18n/*": ["src/i18n/*"],
            "@public/*": ["src/public/*"],
            "@layouts/*": ["src/layouts/*"]
        }
    }
}
