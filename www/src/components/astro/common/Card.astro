---
interface Props {
	isArticle?: boolean;
}

const { isArticle = false } = Astro.props;
---

{
	isArticle && (
		<article class="card bg-base-200 card-md relative h-full max-w-full">
			<slot />
		</article>
	)
}

{
	!isArticle && (
		<div class="card bg-base-200 card-md relative h-full max-w-full">
			<slot />
		</div>
	)
}
