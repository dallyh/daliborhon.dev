---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {}

const { class: restClass = "", ...rest } = Astro.props;

const mergedClass = ["external", restClass].filter(Boolean).join(" ");
---

<a {...rest} class={mergedClass} rel="nofollow noopener noreferrer" target="_blank"><slot /></a>

<style>
	.external {
		display: inline-block;
		&::after {
			content: "";
			display: inline-block;
			width: 1rem;
			height: 1rem;
			margin-left: 0.2rem;
			background: var(--color-primary);
			mask: url("/assets/external-arrow.svg") no-repeat center;
			mask-size: contain;
			vertical-align: middle;
		}
	}
</style>
