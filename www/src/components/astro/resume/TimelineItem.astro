---
export type TimelineItem = {
	date: string;
	title: string;
	institute: string;
};

export interface Props {
	date: string;
	title: string;
	institute: string;
}

const { date, title, institute } = Astro.props;
const isPrint = Astro.locals.isPrint;
---

<div class="timeline-item">
	<p class="date text-primary">{date}</p>
	<p class="title not-prose mb-2"><strong>{title}</strong></p>
	<p class="not-prose mb-4">{institute}</p>
	<div class="bg-base-200 border-base-300 p-4 [&>p]:m-0">
		<slot />
	</div>
	{isPrint && <hr />}
</div>

<style>
	.timeline-item {
		position: relative;
		margin-left: 1.5rem;
		margin-bottom: 2rem;

		.date {
			font-size: 0.835rem;
			font-weight: 300;
			position: relative;
			margin-bottom: 0.5rem;

			&::before {
				content: "";
				position: absolute;
				width: 15px;
				height: 15px;
				border-radius: 50%;
				left: -30px;
				top: 0;
				border: 3px solid var(--color-primary);
				background-color: var(--color-primary);
			}
		}

		.title {
			line-height: 1.2;
			position: relative;
			font-weight: normal;
			max-width: 95%;
			font-size: 1.2rem;
		}
	}
</style>
