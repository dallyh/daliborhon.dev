{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@components/*": ["${configDir}/src/components/*"],
            "@assets/*": ["${configDir}/src/assets/*"],
            "@public/*": ["${configDir}/src/public/*"],
            "@layouts/*": ["${configDir}/src/layouts/*"],
            "@utils": ["${configDir}/src/utils/index.ts"],
            "@utils/": ["${configDir}/src/utils/*"],
            "@utils/content": ["${configDir}/src/utils/content/index.ts"],
            "@utils/og": ["${configDir}/src/utils/open-graph/index.ts"],
            "@utils/i18n": ["${configDir}/src/utils/i18n.ts"],
            "@services/*": ["${configDir}/src/services/*"],
            "@site-config": ["${configDir}/site.config.ts"],
            "@content/*": ["${configDir}/src/content/*"],
            "@lib/*": ["${configDir}/src/lib/*"],
            "@integrations/*": ["${configDir}/src/integrations/*"],
            "@paraglide/*": ["${configDir}/src/paraglide/*"],
            "@i18n-config": ["${configDir}/i18n.config.ts"],
            "@logger": ["${configDir}/src/utils/logger.ts"]
        }
    }
}
