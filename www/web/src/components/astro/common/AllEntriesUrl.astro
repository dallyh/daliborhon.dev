---
import { Icon } from "astro-icon/components";
import { getRelativeLocaleUrl } from "astro:i18n";

interface Props {
	url: string;
	urlDescription: string;
}

const { url, urlDescription } = Astro.props;

const locale = Astro.currentLocale!;
---

<div class="mt-8 text-center has-icon icon-left">
	<a class="has-icon" href={getRelativeLocaleUrl(locale, url)} aria-label={urlDescription} title={urlDescription}> <span>{urlDescription}</span><Icon class="ml-2" name="heroicons:arrow-long-right" /></a>
</div>
