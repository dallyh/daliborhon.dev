---
interface Props {
	isArticle?: boolean;
}

const { isArticle = false } = Astro.props;
---

{
	isArticle && (
		<article class="card card-striped bg-base-100 card-md relative h-full max-w-full border border-neutral-600">
			<slot />
		</article>
	)
}

{
	!isArticle && (
		<div class="card card-striped bg-base-100 card-md relative h-full max-w-full border border-neutral-600">
			<slot />
		</div>
	)
}
